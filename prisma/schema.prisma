generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Playlist {
  id          Int     @id @default(autoincrement())
  name        String
  spotifyLink String?
  artworkUrl  String?
  year        Int?
  songs       Song[]
}

model Song {
  id          Int      @id @default(autoincrement())
  title       String
  artist      String
  album       String?
  playlist    Playlist @relation(fields: [playlistId], references: [id])
  playlistId  Int
  rating      Int?
  sortOrder   Int
  notes       String?
  spotifyLink String?
  artworkUrl  String?
}
