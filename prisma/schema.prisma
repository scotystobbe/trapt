generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VIEWER
}

model Playlist {
  id          Int     @id @default(autoincrement())
  name        String
  spotifyLink String?
  unratedPlaylistId String?  // Spotify playlist ID for unrated songs
  artworkUrl  String?
  year        Int?
  songs       Song[]
}

model Song {
  id           Int      @id @default(autoincrement())
  title        String
  artist       String
  album        String?
  playlist     Playlist @relation(fields: [playlistId], references: [id])
  playlistId   Int
  rating       Int?
  sortOrder    Int
  notes        String?
  spotifyLink  String?
  artworkUrl   String?
  geniusSongId Int?
  geniusUrl    String?
  geniusNoMatch Boolean @default(false)
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  username String? @unique
  name     String?
  password String
  role     Role    @default(VIEWER)
}
